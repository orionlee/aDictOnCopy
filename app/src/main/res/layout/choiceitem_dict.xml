<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/item_margin_start"
    android:paddingStart="@dimen/item_margin_start"
    android:paddingBottom="@dimen/item_margin_bottom"
    android:orientation="horizontal"> <!-- add paddingLeft to support API < 17 -->

    <ImageView
        android:id="@+id/dictChoiceIcon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        />

    <RelativeLayout
        android:layout_width="@dimen/item_spacer_width"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/dictChoiceLabel"
        style="@style/ItemFont"
        android:text=""
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>