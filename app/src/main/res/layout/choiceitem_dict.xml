<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/item_margin_start"
    android:paddingBottom="@dimen/item_margin_bottom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dictChoiceIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        />

    <RelativeLayout
        android:layout_width="@dimen/item_spacer_width"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/dictChoiceLabel"
        style="@style/ItemFont"
        android:text="Label"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        /> <!-- TODO: style the text -->

</LinearLayout>