-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.oldev.aDictOnCopy.MainActivity">


    <Button
        android:id="@+id/startCtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Start Dictionay On Copy" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/section_spacer_height"/> <!-- Used as <Space> for API level < 14 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="When text is copied, it will be looked up in the dictionary."
            style="@style/BodyFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/section_spacer_height"/> <!-- Used as <Space> for API level < 14 -->

    <TextView
        android:text="Dictionary"
        style="@style/BodyFont"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> <!-- TODO: style - add fold and underline -->

    <Button
        android:id="@+id/dictSelectCtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textAllCaps="false"
        android:text="Select a Dictionary" />

</LinearLayout>
