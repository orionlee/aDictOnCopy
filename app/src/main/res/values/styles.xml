<?xml version="1.0" encoding="utf-8"?>
<!--
-->

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light">
    </style>


    <style name="HeadingFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SectionFont" parent="@style/HeadingFont">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BodyFont" parent="@style/HeadingFont">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ItemFont" parent="@style/HeadingFont">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ErrorFont" parent="@style/BodyFont">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
